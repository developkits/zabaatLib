    TextInput {
        id: profileInput
        property string  fontName :"Diogenes"
        property string labelName:"Profile Name"
        property int fontSize: 32

        anchors.horizontalCenter: parent.horizontalCenter
        y:parent.height /phi
        width: 217
        height: 34
        focus:true
        font.family: fontName
        text:"Hermes"
//        KeyNavigation.tab:btnLogin
        font.pointSize: fontSize

        horizontalAlignment: Text.AlignHCenter
        onTextChanged:{
            console.log("profile name changing")
//            if ((tInUsername.text != "username") && (tInPassword.text != "password")){
//                btnLogin.txt = "Login"
//            }
        }

        Text
        {
            id: label
            anchors{
                top:line.bottom
                topMargin:5
                horizontalCenter: parent.horizontalCenter
            }
            text: parent.labelName
            font.family:parent.font
            font.pointSize: Math.floor(parent.fontSize * 1.2)
        }

        Rectangle {  // line under the text
            id:line
            width: parent.width
            height: 2
            color: "#000000"
            anchors.bottom: parent.bottom
            anchors.bottomMargin: parent.height/3
        }

        Rectangle{ //outlined area
            opacity: .1
            color:"white"
            anchors.bottom: line.top
            anchors.horizontalCenter: parent.horizontalCenter
            height:parent.height*phi
            width: parent.width+phi
            border.width: 1
        }

        MouseArea{
            anchors.fill:parent
            onClicked: {
                if (parent.clickedOnce === false) {parent.text=""; parent.clickedOnce = true;}
                else {parent.selectAll();profileInput.forceActiveFocus()};
            }
        }

    }